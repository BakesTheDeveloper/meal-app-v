<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#F50057"
android:orientation="vertical"
tools:context=".MainActivity"
tools:ignore="DuplicateIds">

    <TextView
        android:id="@+id/textView"
        android:layout_width="392dp"
        android:layout_height="42dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_horizontal"
        android:text="meal suggestions app"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#0B0B0B"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/dontTouch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.648" />

<TextView
    android:id="@+id/dontTouch"
    android:layout_width="283dp"
    android:layout_height="77dp"
    android:layout_margin="65dp"
    android:gravity="center_horizontal"
    android:text="Please Enter One: Morning, MId-Morning, Afternoon, Late-Noon, Supper"
    android:textAlignment="center"
    android:textColor="#090909"
    tools:layout_editor_absoluteX="64dp"
    tools:layout_editor_absoluteY="116dp" />

<Button
    android:id="@+id/mealButton"
    android:layout_width="179dp"
    android:layout_height="51dp"
    android:layout_marginHorizontal="115dp"
    android:text="Get Suggestion"
    android:textColor="#090909"
    app:iconTint="#040404"
    tools:layout_editor_absoluteX="132dp"
    tools:layout_editor_absoluteY="308dp" />

<EditText
    android:id="@+id/editTextText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="100dp"
    android:layout_marginVertical="50dp"
    android:ems="10"
    android:inputType="text"
    android:textColor="#090909"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.497"
    app:layout_constraintStart_toStartOf="parent"
    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck,VisualLintTextFieldSize"
    tools:layout_editor_absoluteY="211dp" />

<TextView
    android:id="@+id/SuggestionView"
    android:layout_width="414dp"
    android:layout_height="82dp"
    app:layout_constraintBottom_toTopOf="@+id/ResetButton"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/mealButton"
    app:layout_constraintVertical_bias="0.566" />

<Button
    android:id="@+id/ResetButton"
    android:layout_width="179dp"
    android:layout_height="51dp"
    android:layout_marginHorizontal="115dp"
    android:gravity="center|center_horizontal"
    android:text="@string/reset"
    android:textColor="#090909"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    tools:layout_editor_absoluteY="548dp" />


</LinearLayout>