<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pint"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:ignore="DuplicateIds">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginVertical="35dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_horizontal"
        android:text="meal suggestions app"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/dontTouch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="35dp"
        android:gravity="center_horizontal"
        android:text="Please Enter One: Morning, MId-Morning, Afternoon, Late-Noon, Supper"
        android:textAlignment="center"
        android:textColor="#FAF7F7"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="116dp" />

    <Button
        android:id="@+id/mealButton"
        android:layout_width="179dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="85dp"
        android:text="Get Suggestion"
        android:textColor="#FFFEFE"
        app:iconTint="#040404"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="308dp" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="100dp"
        android:layout_marginVertical="50dp"
        android:ems="10"
        android:inputType="text"
        android:textColor="#090909"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck,VisualLintTextFieldSize"
        tools:layout_editor_absoluteY="211dp" />

    <TextView
        android:id="@+id/SuggestionView"
        android:layout_width="372dp"
        android:layout_height="62dp"
        app:layout_constraintBottom_toTopOf="@+id/ResetButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mealButton"
        app:layout_constraintVertical_bias="0.566" />

    <Button
        android:id="@+id/ResetButton"
        android:layout_width="179dp"
        android:layout_height="51dp"
        android:layout_marginHorizontal="85dp"
        android:gravity="center|center_horizontal"
        android:text="Reset"
        android:textColor="#FBFAFA"
        app:iconTint="#0B0B0B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="548dp" />


</LinearLayout>